<Window x:Class="MultiWindowTest.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SecondWindow" Height="400" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="showTestMsg" Width="120" Height="30" Click="showTestMsg_Click" Grid.Row="0">Show Test Msg</Button>
        <TextBlock x:Name="testMsgDisplay" Width="390" Height="160" Grid.Row="1">{test msg shown here)</TextBlock>
    </Grid>
</Window>
