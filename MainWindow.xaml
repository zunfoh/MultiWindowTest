<Window x:Class="MultiWindowTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>    
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Button x:Name="showNewWin" Grid.Row="0" Width="120" Height="30" Click="showNewWin_Click">Show New Win</Button>
        <TextBox x:Name="testTxt" Grid.Row="1" Width="360" Height="60" > (Enter test msg here. Press Enter when done editing) </TextBox>
    </Grid>
</Window>
